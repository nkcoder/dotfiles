[user]
    name = Daniel
    email = daniel.guo@vivalabs.com.au

[alias]
    co = checkout

    # show all branches
    br = branch --all

    ci = commit

    st = status

    # Pull with rebase
    pr = pull -r

    # View abbreviated SHA, description, and history graph of the latest 30 commits
    l = log --pretty=oneline -n 30 --graph --abbrev-commit

    # List contributors with number of commits
    contributors = shortlog --summary --numbered

[color]
    # Use colors in Git commands for colored output
    ui = auto

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    dark = true
    line-numbers = true

[merge]
    conflictStyle = zdiff3
